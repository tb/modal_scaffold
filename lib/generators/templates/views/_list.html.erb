<%% if @<%= plural_table_name %>.empty? %>
  No <%= human_name %>.
<%% else %>
  <table>
    <tr>
      <% for attribute in attributes -%>
        <th><%= attribute.human_name %></th>
      <% end -%>
      <th></th>
      <th></th>
      <th></th>
    </tr>

    <%% @<%= plural_table_name %>.each do |<%= singular_table_name %>| %>
    <tr>
      <% for attribute in attributes -%>
        <td><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
      <% end -%>
      <td><%%= link_to 'Edit', edit_<%= singular_table_name %>_path(<%= singular_table_name %>), :method => :get, :remote => true %></td>
      <td><%%= link_to 'Destroy', <%= singular_table_name %>, :confirm => 'Are you sure?', :method => :delete, :remote => true %></td>
    </tr>
    <%% end %>
  </table>
<%% end %>
